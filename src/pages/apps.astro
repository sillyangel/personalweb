---
import BaseHead from '../components/BaseHead.astro';
import Button from '../components/button.astro'
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header title={SITE_TITLE} />
			<main>
				<h1>Music Apps</h1>
				<Button href="https://music.sillyangel.me" backgroundcolor="#222222">Playmusic</Button>
				<Button href="https://beatbump.sillyangel.me/" backgroundcolor="#222222">Beatbump (Self Hosted)</Button>
				<Button href="https://hyperpipe.sillyangel.me/" backgroundcolor="#222222">Hyperpipe (Self Hosted)</Button>
				<h1>Web Apps</h1>
				<Button href="https://ttt.sillyangel.me/" backgroundcolor="#efefef">Tic Tac Toe (Saves Progress, React)</Button>
				<Button href="https://spfy.sillyangel.me/" backgroundcolor='#efefef'>Spotify Artist Album Search (React)</Button>
				<Button href="https://buildstatus.sillyangel.me/" backgroundcolor='#efefef'>Build Status Application (Native React)</Button>
			</main>
		<Footer />
	</body>
</html>
